{
	"name": "gramio",
	"type": "module",
	"version": "0.4.14",
	"description": "Powerful, extensible and really type-safe Telegram Bot API framework",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./utils": {
			"import": {
				"types": "./dist/utils.d.ts",
				"default": "./dist/utils.js"
			},
			"require": {
				"types": "./dist/utils.d.cts",
				"default": "./dist/utils.cjs"
			}
		}
	},
	"keywords": [
		"telegram",
		"telegram-bot",
		"telegram-bot-api",
		"bot",
		"framework",
		"types",
		"client",
		"webhook",
		"long-polling",
		"files",
		"plugins",
		"format",
		"contexts",
		"files"
	],
	"scripts": {
		"type": "tsc --noEmit",
		"lint": "bunx @biomejs/biome check ./src",
		"lint:fix": "bun lint --apply",
		"prepublishOnly": "bun test && bunx tsc --noEmit && bunx pkgroll",
		"jsr": "bun scripts/release-jsr.ts",
		"try-deno": "deno publish --unstable-sloppy-imports --dry-run --allow-slow-types --allow-dirty"
	},
	"author": "kravets",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.3.15",
		"@types/bun": "^1.3.9",
		"@types/debug": "^4.1.12",
		"expect-type": "^1.3.0",
		"pkgroll": "^2.25.2",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@gramio/callback-data": "^0.0.3",
		"@gramio/contexts": "^0.4.0",
		"@gramio/files": "^0.3.0",
		"@gramio/format": "^0.3.4",
		"@gramio/keyboards": "^1.3.0",
		"@gramio/types": "^9.4.0",
		"debug": "^4.4.3",
		"middleware-io": "^2.8.1"
	},
	"files": [
		"dist"
	]
}
